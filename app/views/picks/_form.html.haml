= form_for @pick do |f|
  - if @pick.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pick.errors.count, "error")} prohibited this pick from being saved:"
      %ul
        - @pick.errors.full_messages.each do |msg|
          %li= msg

  = f.label :type
  = f.select (:type, Pick.types.keys.map {|type| [type.titleize, type]})
  .actions
    = f.submit 'Save'
